<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="@dimen/layout_width_item_activity_nav_quote"
        android:layout_height="@dimen/layout_height_item_activity_nav_quote"
        android:layout_gravity="center"
        android:background="@color/black_light">

        <TextView
            android:id="@+id/quote_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black_light"
            android:gravity="center"
            android:text="-"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>
</layout>
